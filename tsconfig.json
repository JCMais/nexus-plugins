{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    // node v12 supports 100% of ES2019
    "target": "ES2019",
    // "lib": [
    //   "es2018",
    //   // error Cannot find name 'AsyncIterable'.
    //   "esnext.asynciterable"
    // ],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "importHelpers": true,
    // "esModuleInterop": true,
    // "rootDir": "src",
    "noUnusedLocals": true
  },
  "exclude": ["**/*.test.ts", "**/test.config.ts", "node_modules", "**/build/*", "**/*.d.ts"]
}
