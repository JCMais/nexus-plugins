{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    // node v12 supports 100% of ES2019
    "target": "ES2019",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    // "typeRoots": ["./node_modules/@types"],
    "noUnusedLocals": true
  },
  "exclude": ["**/*.test.ts", "**/test.config.ts", "node_modules", "**/build/*", "**/*.d.ts"]
}
