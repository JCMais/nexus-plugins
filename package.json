{
  "name": "root",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "build:dist": "lerna run --stream --sort build:dist",
    "clean:dist": "lerna run --stream --sort clean:dist",
    "format": "prettier --write \"**/*.ts\"  \"!**/dist/**\"  \"!**/dist-esm/**\"",
    "lint": "eslint \"plugins/**/*.ts\" -f eslint-formatter-friendly",
    "p": "lerna publish --conventional-commits",
    "p:force:all": "lerna publish --force-publish=*",
    "pre-commit": "lerna run --stream --sort pre-commit",
    "prepare": "lerna run --stream --sort prepare",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pre-commit"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "nexus": "^1.0.0",
    "np": "^7.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.48.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "nexus": ">= 1.0.0"
  }
}
