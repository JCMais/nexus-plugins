{
  "name": "root",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"  \"!**/dist/**\"  \"!**/dist-esm/**\"",
    "lint": "eslint \"plugins/*/src/**/*.ts\" -f eslint-formatter-friendly",
    "prepare": "lerna run --stream --sort prepare",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  }
}
